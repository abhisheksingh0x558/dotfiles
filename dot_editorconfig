# -*- mode: editorconfig-conf -*-
# vim: filetype=editorconfig

# Declare this as top-level configuration
root = true

# Default properties
[*]
# File character encoding
charset = utf-8
# Line ending file format
end_of_line = lf
# Mimic tab size
indent_size = tab
# Indentation with tabs
indent_style = tab
# Insert newline at end of file
insert_final_newline = true
# Maximum length of line
max_line_length = 120
# Tab size
tab_width = 2
# Remove whitespaces at end of line
trim_trailing_whitespace = true

# Emacs Lisp overrides
[*.el]
# Spaces used for indentation
indent_size = 2
# Indentation with spaces
indent_style = space

# Just overrides
[{justfile,*.just}]
# Spaces used for indentation
indent_size = 4
# Indentation with spaces
indent_style = space

# Rust overrides
[*.rs]
# Spaces used for indentation
indent_size = 4
# Indentation with spaces
indent_style = space

# Python overrides
[*.py]
# Spaces used for indentation
indent_size = 4
# Indentation with spaces
indent_style = space
