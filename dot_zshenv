# -*- mode: sh -*-
# vim: filetype=zsh

# Plugin manager
declare -A ZINIT
ZINIT[NO_ALIASES]=1 # Disable aliases

# Environment
export GOPATH=~/.go # Global Go directory

# Path
declare -U path # De-duplicate path elements
# Custom scripts
local_bin=~/.bin
[[ -d $local_bin ]] && path+=$local_bin
unset local_bin

# Source local environment
env_file=~/.zshenv.local
[[ -f $env_file ]] && source "$env_file"
unset env_file
